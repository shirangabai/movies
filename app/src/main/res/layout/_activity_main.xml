<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78cbe7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shiran.movies.fireBaseFirst.MainActivity">

    <EditText
        android:id="@+id/txt_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_input"
        android:layout_marginTop="10dp"
        android:onClick="onClickOk"
        android:text="OK" />

    <TextView
        android:id="@+id/lbl_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ok"
        android:layout_marginTop="10dp"
        android:text="shiran gabai" />


    <Button
        android:id="@+id/btn_ok2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_text"
        android:layout_marginTop="10dp"
        android:onClick="onClickOk2"
        android:text="OK2" />

    <Button
        android:id="@+id/btn_ok3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ok2"
        android:layout_marginTop="10dp"
        android:onClick="onClickOk3"
        android:text="OK3" />

    <Button
        android:id="@+id/btn_ok4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ok3"
        android:layout_marginTop="10dp"
        android:onClick="onClickOk4"
        android:text="OK4" />

    <Button
        android:id="@+id/btn_ok5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ok4"
        android:layout_marginTop="10dp"
        android:onClick="onClickOk5"
        android:text="OK5" />


</RelativeLayout>
